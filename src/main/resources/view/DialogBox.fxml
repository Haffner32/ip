<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>

<fx:root type="javafx.scene.layout.HBox"
         xmlns="http://javafx.com/javafx/17"
         xmlns:fx="http://javafx.com/fxml1/1"
         alignment="TOP_RIGHT"
         spacing="8.0"
         maxWidth="Infinity">

    <children>
        <Label fx:id="dialog"
               wrapText="true"
               maxWidth="Infinity"/>
        <ImageView fx:id="displayPicture"
                   fitHeight="40.0"
                   fitWidth="40.0"
                   preserveRatio="true"
                   pickOnBounds="true"/>
    </children>

    <padding>
        <Insets top="8.0"
                right="10.0"
                bottom="10.0" />
    </padding>
</fx:root>
